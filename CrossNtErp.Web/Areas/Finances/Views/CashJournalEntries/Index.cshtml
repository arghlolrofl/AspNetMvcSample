@model IEnumerable<CrossNtErp.Web.Areas.Finances.Models.CashJournalEntryViewModel>

@{
    ViewBag.Title = Localization.Overview;
}

<h2>@Localization.Overview</h2>

<p>
    @Html.ActionLink(Localization.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Journal.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Journal.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProcessDescription)
        </td>
        <td>
            @Html.ActionLink(Localization.Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(Localization.Details, "Details", new { id = item.Id }) |
            @Html.ActionLink(Localization.Delete, "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>


@section Subnav {
    @{ Html.RenderPartial("_AreaNavigation"); }
}